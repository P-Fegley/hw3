<h1>New Place</h1>

<form action="/places" method="post"> <!-- 'post' request assumes creation of data -->

  <p>
    <label for="name">Name</label>
    <input type="text" name="name" id="name">
    <!-- 'id' matches the 'for', 'name' labels it in params -->
  </p>

  <button>Submit</button>

  <a href="/places">Cancel</a>
  
</form>